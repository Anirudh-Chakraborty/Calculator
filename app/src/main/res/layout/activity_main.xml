<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_9"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="9"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_6"
        app:layout_constraintStart_toEndOf="@+id/Number_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Dot"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/Black_button"
        android:text="."
        android:textSize="40dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Number_0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_0"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/Black_button"
        android:text="0"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/percent"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/bright_blue"
        android:text="%"
        android:textSize="30dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Dot" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Equals_To"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/bright_blue"
        android:textColor="@color/Text_Blue_For_Bright_Blue_Button"
        android:text="="
        android:textSize="32dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/percent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_1"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="1"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_2"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="2"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Dot"
        app:layout_constraintStart_toEndOf="@+id/Number_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_3"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="3"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Equals_To"
        app:layout_constraintStart_toEndOf="@+id/Number_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Plus"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/tint_blue"
        android:textColor="@color/Text_Blue_For_Tint_Blue"
        android:text="+"
        android:textSize="38dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Equals_To"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Number_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_4"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="4"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_1"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_5"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="5"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_2"
        app:layout_constraintStart_toEndOf="@+id/Number_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_6"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="6"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_3"
        app:layout_constraintStart_toEndOf="@+id/Number_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Minus"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/Text_Blue_For_Tint_Blue"
        android:backgroundTint="@color/tint_blue"
        android:text="-"
        android:textSize="40dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toEndOf="@+id/Number_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_7"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="7"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_4"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ac"
        android:layout_width="152dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Grey_Button"
        android:textColor="@color/Text_Grey_For_Grey_Button"
        android:text="AC"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_7"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Grey_Button"
        android:text="C"
        android:textColor="@color/Text_Grey_For_Grey_Button"
        android:textSize="22dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_9"
        app:layout_constraintStart_toEndOf="@+id/ac" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiply"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/tint_blue"
        android:textColor="@color/Text_Blue_For_Tint_Blue"
        android:text="x"
        android:textSize="38dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Divide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/clear" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Divide"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/tint_blue"
        android:textColor="@color/Text_Blue_For_Tint_Blue"
        android:text="/"
        android:textStyle="bold"
        android:textSize="38dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@+id/Number_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Number_8"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Black_button"
        android:text="8"
        android:textSize="28dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Number_5"
        app:layout_constraintStart_toEndOf="@+id/Number_7" />


</androidx.constraintlayout.widget.ConstraintLayout>